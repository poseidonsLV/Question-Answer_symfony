{% extends 'base.html.twig' %}

{% block title %}Forum - Create Question{% endblock %}

{% block body %}

    <div class="h-full w-full flex justify-center items-center">
        <div class="rounded-lg w-2/5 px-16 py-16">
            <form method="POST" class="flex flex-col items-center justify-center p-5 w-full">
                {% for mess in app.flashes('error') %}
                    <div class="border-l-4 w-full border-red-500 mb-5 rounded-b bg-red-100 px-4 py-3 text-red-700">{{ mess }}</div>
                {% endfor %}
                <div class="w-full">
                    <input class="w-full rounded-md border-2 focus:border-green-400 outline-none transition-color duration-200 p-2" type="text" name="title" placeholder="Question title">
                </div>
                <input id="description-input" class="w-full rounded-md border-2 focus:border-green-400 outline-none transition-color duration-200 p-2" type="hidden" name="description" placeholder="Question title">
                <button type="submit" class="p-3 mt-5 bg-green-500 text-white text-center w-full transition-color duration-200 rounded-md hover:bg-green-700">Submit</button>
            </form>
        </div>
    </div>

{% endblock %}
